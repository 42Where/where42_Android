<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingPage">

    <include
        android:id="@+id/header"
        layout="@layout/header_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.097" />
    <!--    <ImageView-->
    <!--        android:id="@+id/main_logo"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="0dp"-->
    <!--        app:layout_constraintHeight_default="percent"-->
    <!--        app:layout_constraintHeight_percent="0.23"-->
    <!--        android:adjustViewBounds="true"-->
    <!--        android:src="@drawable/main_logo"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="@id/guideline3"/>-->

    <TextView
        android:id="@+id/text_setting"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline1"
        android:gravity="center_horizontal"
        android:textSize="74sp"
        android:fontFamily="@font/gmarketsans_medium"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.097"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.412"
        android:text="환경설정"

        />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logout_button"
            android:layout_width="@dimen/width"
            android:layout_height="100dp"
            style="@style/RoundedButton"
            android:textSize="48px"
            app:layout_constraintTop_toBottomOf="@id/text_setting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            android:text="로그아웃"
            android:gravity="center"
            android:fontFamily="@font/gmarketsans_light"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/unavailable_button"
            android:layout_width="300dp"
            android:layout_height="100dp"
            style="@style/RoundedButton"
            android:textSize="48px"
            app:layout_constraintTop_toBottomOf="@id/logout_button"
            app:layout_constraintStart_toStartOf="@id/logout_button"
            android:layout_marginTop="75dp"
            android:text="자리비움"
            android:gravity="center"
            android:fontFamily="@font/gmarketsans_light"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/comment_button"
            android:layout_width="300dp"
            android:layout_height="100dp"
            style="@style/RoundedButton"
            android:textSize="48px"
            app:layout_constraintTop_toBottomOf="@id/unavailable_button"
            app:layout_constraintStart_toStartOf="@id/unavailable_button"
            android:text="코멘트 설정"
            android:layout_marginTop="75dp"
            android:gravity="center"
            android:fontFamily="@font/gmarketsans_light"
            />



    <include
        android:id="@+id/footer"
        layout="@layout/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

