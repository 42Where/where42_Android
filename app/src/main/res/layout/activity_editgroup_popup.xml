<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/editgroup_layout_height"
    android:background="@drawable/bottom_popup_background"
>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/groupname_layout"
        android:background="@drawable/bottom_popup_background">

<!--        android:paddingStart="24dp"-->
        <TextView
            android:id="@+id/GroupName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/groupname_textview_height"
            android:paddingStart="@dimen/newgroup_layout_padding_top_bottom"
            android:text="그룹명"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#132743"
            android:gravity="center_vertical"
            android:textSize="@dimen/groupname_textsize"
            android:fontFamily="@font/gmarketsans_medium"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/TopLeftCorner"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#30132743"
        app:layout_constraintTop_toBottomOf="@id/groupname_layout"
        />
