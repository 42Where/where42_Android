<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="414.75dp"
    android:background="@drawable/center_popup_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="장소를 선택해주세요"
        android:layout_marginTop="20dp"
        android:textColor="#132743"
        android:textSize="20sp"
        android:fontFamily="@font/gmarketsans_bold" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.53" />



        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            style="@style/RoundedButton"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/gmarketsans_medium"
            android:id="@+id/btnFloor1"
            android:text="유튜브스튜디오"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnFloor2"

            />

        <android.widget.Button
            android:layout_marginBottom="10dp"
            android:id="@+id/btnFloor2"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            style="@style/RoundedButton"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/gmarketsans_medium"
            android:text="오아시스"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnFloor3"
            />

        <android.widget.Button

            android:id="@+id/btnFloor3"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            style="@style/RoundedButton"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/gmarketsans_medium"

            android:text="회의실A"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <android.widget.Button
            android:layout_marginTop="10dp"
            android:id="@+id/btnFloor4"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            style="@style/RoundedButton"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/gmarketsans_medium"
            android:text="회의실B"
            app:layout_constraintTop_toBottomOf="@id/btnFloor3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    <android.widget.Button
        android:layout_marginTop="10dp"
        android:id="@+id/btnFloor5"
        android:gravity="center"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        style="@style/RoundedButton"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/gmarketsans_medium"
        android:text="스톤테이블"
        app:layout_constraintTop_toBottomOf="@id/btnFloor4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <android.widget.Button
        android:layout_marginTop="10dp"
        android:id="@+id/btnFloor6"
        android:gravity="center"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        style="@style/RoundedButton"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/gmarketsans_medium"
        android:text="기타학습공간"
        app:layout_constraintTop_toBottomOf="@id/btnFloor5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

