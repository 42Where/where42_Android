<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/editstatus_layout_width"
    android:layout_height="@dimen/editseat1floor_height"
    android:background="@drawable/center_popup_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="층 수를 선택해주세요"
        android:layout_marginTop="@dimen/profile_popup_layout_height_paddingTop"
        android:textColor="#132743"
        android:textSize="@dimen/create_group_button_textsize"
        android:fontFamily="@font/gmarketsans_bold" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="@dimen/layout_height_padding"
                android:gravity="center"
                android:layout_width="@dimen/profile_popup_detail_layout_height"
                android:layout_height="wrap_content"
                style="@style/RoundedButton"
                android:textSize="@dimen/create_group_button_textsize"
                android:textColor="@color/white"
                android:fontFamily="@font/gmarketsans_medium"

                android:id="@+id/btnFloor1"
                android:text="1층"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title"
                 />

            <android.widget.Button
                android:layout_marginTop="@dimen/layout_height_padding"
                android:id="@+id/btnFloor2"
                android:gravity="center"
                android:layout_width="@dimen/profile_popup_detail_layout_height"
                android:layout_height="wrap_content"
                style="@style/RoundedButton"
                android:textSize="@dimen/create_group_button_textsize"
                android:textColor="@color/white"
                android:fontFamily="@font/gmarketsans_medium"

                android:text="2층"
                app:layout_constraintTop_toBottomOf="@id/btnFloor1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <android.widget.Button
                android:layout_marginTop="@dimen/layout_height_padding"
                android:id="@+id/btnFloor3"
                android:gravity="center"
                android:layout_width="@dimen/profile_popup_detail_layout_height"
                android:layout_height="wrap_content"
                style="@style/RoundedButton"
                android:textSize="@dimen/create_group_button_textsize"
                android:textColor="@color/white"
                android:fontFamily="@font/gmarketsans_medium"

                android:text="3층"
                app:layout_constraintTop_toBottomOf="@id/btnFloor2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <android.widget.Button
                android:layout_marginTop="@dimen/layout_height_padding"
                android:id="@+id/btnFloor4"
                android:gravity="center"
                android:layout_width="@dimen/profile_popup_detail_layout_height"
                android:layout_height="wrap_content"
                style="@style/RoundedButton"
                android:textSize="@dimen/create_group_button_textsize"
                android:textColor="@color/white"
                android:fontFamily="@font/gmarketsans_medium"
                android:text="4층"
                app:layout_constraintTop_toBottomOf="@id/btnFloor3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <android.widget.Button
                android:layout_marginTop="@dimen/layout_height_padding"
                android:id="@+id/btnFloor5"
                android:gravity="center"
                android:layout_width="@dimen/profile_popup_detail_layout_height"
                android:layout_height="wrap_content"
                style="@style/RoundedButton"
                android:textSize="@dimen/create_group_button_textsize"
                android:textColor="@color/white"
                android:fontFamily="@font/gmarketsans_medium"
                android:text="5층"
                app:layout_constraintTop_toBottomOf="@id/btnFloor4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <android.widget.Button
                android:layout_marginTop="@dimen/layout_height_padding"
                android:id="@+id/btnFloor6"
                android:gravity="center"
                android:layout_width="@dimen/profile_popup_detail_layout_height"
                android:layout_height="wrap_content"
                style="@style/RoundedButton"
                android:textSize="@dimen/create_group_button_textsize"
                android:textColor="@color/white"
                android:fontFamily="@font/gmarketsans_medium"
                android:text="지하/옥상"
                app:layout_constraintTop_toBottomOf="@id/btnFloor5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

</androidx.constraintlayout.widget.ConstraintLayout>
