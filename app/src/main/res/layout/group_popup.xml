<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="364dp"
    android:background="@drawable/bottom_popup_background"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/GroupName"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="24dp"
        android:text="그룹명"
        android:textColor="#132743"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:fontFamily="@font/gmarketsans_medium"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/GroupName"
        android:layout_centerInParent="true"
        android:background="#132743"/>

    <Button
        android:id="@+id/EditName"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:paddingStart="36dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/GroupName"
        android:text="그룹 이름 수정하기"
        android:textColor="#B20000"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:fontFamily="@font/gmarketsans_medium"/>

    <Button
        android:id="@+id/Edit"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:paddingStart="36dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/EditName"
        app:layout_constraintBottom_toTopOf="@id/Delete"
        android:text="그룹 수정하기"
        android:textColor="#B20000"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:fontFamily="@font/gmarketsans_medium"/>

    <android.widget.Button
        android:id="@+id/Delete"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:paddingStart="36dp"
        android:background="@drawable/delete_friend_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="그룹 삭제하기"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:fontFamily="@font/gmarketsans_medium"/>


</androidx.constraintlayout.widget.ConstraintLayout>
