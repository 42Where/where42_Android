<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/agree_height"
    android:background="@drawable/center_popup_background"
    >
<!--    android:layout_width="@dimen/help_popup_width"-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />



    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="개인정보 수집 및 이용 동의사(필수)"
        android:textColor="#132743"
        android:textSize="@dimen/font_medium_change"
        android:fontFamily="@font/gmarketsans_bold" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.16" />


    <TextView
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="(재)이노베이션 아카데미는 『개인정보 보호법』 제15조 등 관련 법령에 따라 서비스 이용자의 개인정보보호를 매우 중시하며, 서비스 제공에 반드시 필요한 개인정보의 수집⦁이용을 위하여 귀하의 동의를 받고자 합니다."
        android:textColor="#132743"
        android:textSize="@dimen/agree_text_size_9"
        android:fontFamily="@font/gmarketsans_medium"
        android:paddingRight="@dimen/list_padding_top_bottom"
        android:paddingLeft="@dimen/list_padding_top_bottom"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.277" />


    <TextView
        android:id="@+id/detail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="개인정보의 수집 및 이용 목적"
        android:textColor="#132743"
        android:textSize="@dimen/help_popup_font_small"
        android:fontFamily="@font/gmarketsans_bold"
        android:paddingRight="@dimen/list_padding_top_bottom"
        android:paddingLeft="@dimen/list_padding_top_bottom"/>


    <TextView
        android:id="@+id/detail_min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="어디있니 현재 위치 확인 서비스 제공"
        android:textColor="#132743"
        android:textSize="@dimen/agree_text_size_9"
        android:fontFamily="@font/gmarketsans_medium"
        android:paddingRight="@dimen/list_padding_top_bottom"
        android:paddingLeft="@dimen/list_padding_top_bottom"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40" />

    <TextView
        android:id="@+id/detail3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guideline5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="수집하는 개인정보 항목"
        android:textColor="#132743"
        android:textSize="@dimen/help_popup_font_small"
        android:fontFamily="@font/gmarketsans_bold"
        android:paddingRight="@dimen/list_padding_top_bottom"
        android:paddingLeft="@dimen/list_padding_top_bottom"/>

    <TextView
        android:id="@+id/detail_min2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="인트라 로그인 아이디, 클러스터 출입 상태, 입실 시 현재 입실 한 클러스터, 출입카드 마지막 태그 시간"
        android:textColor="#132743"
        android:textSize="8sp"
        android:fontFamily="@font/gmarketsans_medium"
        android:paddingRight="@dimen/list_padding_top_bottom"
        android:paddingLeft="@dimen/list_padding_top_bottom"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.536" />

    <TextView
        android:id="@+id/detail4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guideline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="개인정보의 보유 및 이용기간"
        android:textColor="#132743"
        android:textSize="@dimen/help_popup_font_small"
        android:fontFamily="@font/gmarketsans_bold"
        android:paddingRight="@dimen/list_padding_top_bottom"
        android:paddingLeft="@dimen/list_padding_top_bottom"/>

    <TextView
        android:id="@+id/detail_min3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="3년 - (보유기간 경과 및 보유목적 달성 시 지체 없이 파기합니다)"
        android:textColor="#132743"
        android:textSize="@dimen/agree_text_size_9"
        android:fontFamily="@font/gmarketsans_medium"
        android:paddingRight="@dimen/list_padding_top_bottom"
        android:paddingLeft="@dimen/list_padding_top_bottom"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.666" />

    <TextView
        android:id="@+id/detail5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guideline7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="동의 거부 권리 및 동의 거부에 따른 불이익 내용 또는 제한사항"
        android:textColor="#132743"
        android:textSize="@dimen/help_popup_font_small"
        android:fontFamily="@font/gmarketsans_bold"
        android:paddingRight="@dimen/list_padding_top_bottom"
        android:paddingLeft="@dimen/list_padding_top_bottom"/>

    <TextView
        android:id="@+id/detail_min4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="귀하는 개인정보 수집 및 이용에 대해 동의를 거부할 권리가 있습니다. 필수항목에 대한 동의 거부 시 어디있니 서비스 제공이 제한됨을 알려드립니다."
        android:textColor="#132743"
        android:textSize="@dimen/agree_text_size_9"
        android:fontFamily="@font/gmarketsans_medium"
        android:paddingRight="@dimen/list_padding_top_bottom"
        android:paddingLeft="@dimen/list_padding_top_bottom"/>




<!--    &lt;!&ndash;    app:layout_constraintEnd_toStartOf="@id/submit"&ndash;&gt;-->
<!--&lt;!&ndash;    app:layout_constraintTop_toBottomOf="@id/title"&ndash;&gt;-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.widget.Button
        android:id="@+id/cancel"
        android:layout_width="@dimen/newgroup_button_width"
        android:layout_height="@dimen/groupname_textview_height"
        android:background="@drawable/cancel_button"
        app:layout_constraintTop_toBottomOf="@id/guideline8"
        app:layout_constraintEnd_toStartOf="@id/guideline9"
        android:paddingStart="@dimen/newgroup_button_padding"
        android:paddingEnd="@dimen/newgroup_button_padding"
        android:layout_marginEnd="@dimen/newgroup_button_marginend"
        android:text="거절"
        android:textColor="#132743"
        android:gravity="center"
        android:textSize="@dimen/newgroup_button_textsize"
        android:fontFamily="@font/gmarketsans_medium"/>
<!--    android:layout_height="@dimen/newgroup_button_height"-->
    <android.widget.Button
        android:id="@+id/submit"
        android:layout_width="@dimen/newgroup_button_width"
        android:layout_height="@dimen/groupname_textview_height"
        android:background="@drawable/submit_button"
        app:layout_constraintTop_toBottomOf="@id/guideline8"
        app:layout_constraintStart_toEndOf="@id/guideline9"
        android:paddingStart="@dimen/newgroup_button_padding"
        android:paddingEnd="@dimen/newgroup_button_padding"
        android:layout_marginStart="@dimen/newgroup_button_marginend"
        android:text="동의"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/newgroup_button_textsize"
        android:fontFamily="@font/gmarketsans_medium"/>


</androidx.constraintlayout.widget.ConstraintLayout>
